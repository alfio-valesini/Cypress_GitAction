name: Running Cypress Tests on Trello project

on: push

jobs:
  deploy-Trello-App:
    runs-on: ubuntu-22.04
    
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Install Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'
        
      # Install npm dependencies and start Trello project
     
      - name: Navegate to app folder and install Trello project
        working-directory: ./app
        run: |
          npm install
          npm start

  run-cypress-tests:
    needs: deploy-Trello-App
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Install Dependencies for Cypress
        run: npm install

      - name: Run Cypress Tests
        run: npm run cypress:run
